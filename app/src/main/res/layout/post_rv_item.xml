<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="217dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="338dp"
        android:layout_height="185dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/imgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="286dp"
                android:layout_height="43dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Phạm Thế Anh"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/txtCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="3dp"
                        android:text="VIB Xa La"
                        android:textColor="#4D5562"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="16dp">

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="60dp"
                        android:layout_height="16dp"
                        android:text="1 giờ trước"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="286dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="286dp"
                    android:layout_height="40dp"
                    android:text="VIB Xala cần bán iDepo 100 trệu 11/11/2023"
                    android:textColor="#121826"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="16dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="@+id/layout_item">

    </LinearLayout>


</LinearLayout>